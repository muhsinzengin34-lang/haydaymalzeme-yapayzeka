# ============================================
# ZORUNLU AYARLAR
# ============================================

# OpenAI API Key (zorunlu)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (varsayılan: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Port (varsayılan: 3000)
PORT=3000

# ============================================
# SATIŞ PASI (opsiyonel)
# ============================================

# Shopier URL (satış yönlendirme)
SALES_SHOPIER_URL=https://www.shopier.com/haydaymalzemeleri

# WhatsApp numarası (onay/hızlandırma)
SALES_WHATSAPP=+905423246261

# ============================================
# GÜVENLİK (opsiyonel)
# ============================================

# CORS izinli origin'ler (virgülle ayır)
CORS_ORIGINS=http://localhost:3000,https://senindomain.com

# Encryption key (opsiyonel, otomatik oluşturulur)
ENCRYPTION_KEY=

# ============================================
# REDIS (opsiyonel - yoksa memory fallback)
# ============================================

# Redis URL (opsiyonel)
REDIS_URL=redis://localhost:6379

# ============================================
# TELEGRAM (opsiyonel - şu anda pasif)
# ============================================

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=

# Admin Telegram ID
ADMIN_TELEGRAM_ID=

# ============================================
# ORTAM (opsiyonel)
# ============================================

# Node ortamı (development/production)
NODE_ENV=development

# Render external URL (production için)
RENDER_EXTERNAL_URL=
